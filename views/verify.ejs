<%data.forEach(function(data){%>
 <%if (data.status === "In process") {%>
    <div class="main-div">



      <div class="row"id="div-width-main">
        <div class="col-lg-6">
          <p>First name : <%=data.firstName %></p>
        </div>
        <div class="col-lg-6 "id="div-width">
          <p>Last name : <%=data.lastName %></p>
        </div>
        <div class="col-lg-6">
          <p>Father's name : <%=data.fathersName %></p>
          </div>
        <div class="col-lg-6 "id="div-width">

          <%  var date = data.dob;
          var year = date.toLocaleString("default", { year: "numeric" });
          var month = date.toLocaleString("default", { month: "2-digit" });
          var day = date.toLocaleString("default", { day: "2-digit" });
          var formattedDate = day + "-" + month + "-" + year;%>
          <p>D.O.B name : <%= formattedDate %></p>
        </div>
        <div class="col-lg-6">
          <p>E-mail : <%=data.email %></p>
        </div>
        <div class="col-lg-6 "id="div-width">
          <p>Mobile no.  : <%=data.mob %></p>
        </div>
        <div class="col-lg-6">


            <p>House no : <%=data.address.house_no %></p>


        </div>
        <div class="col-lg-6"id="div-width">
          <p>Locality  : <%=data.address.locality %></p>


        </div>
        <div class="col-lg-6"id="div-width">
          <p>Road name : <%=data.address.road_name %></p>
        </div>
        <div class="col-lg-6"id="div-width">
          <p>Pincode  : <%=data.address.pincode %></p>
        </div>
        <div class="form-group col-lg-6">
          <p>State  : <%=data.address.state %></p>
        </div>
        <div class="form-group col-lg-6">
          <p>District  : <%=data.address.district %></p>
        </div>
        <div class="col-lg-6">
          <p>Identity type  : <%=data.identity_type %></p>
        </div>

        <div class="col-lg-6">
          <p>Identity number  : <%=data.identity_no %></p>

          </div>
        <div class="col-lg-6">
          <!-- <img src="view-pdf?id=<%=data._id%>" width="100%" height="200"> -->
          <a href="view-pdf?id=<%=data._id%>" download>
            <img src="view-pdf?id=<%=data._id%>" alt="image" style="max-width: 400px;max-height: 400px;">
          </a>


        </div>
        <form class="" action="/verify/<%=data._id%>" method="post">
          <label for="">Reason for rejection : </label>
          <input type="text" name="reason" value="">
          <input type="submit" name="" value="Submit">
        </form>


        <div class="division-submit1"><a href="/approve/<%=data._id%>"><input class="btn btn-primary btn1 btn11"type="submit" name="" value="Approve"></a>
      </div>

      <div class="division-submit1 right"><a href="/disapprove/<%=data._id%>"><input class="btn btn-primary btn1 btn12"type="submit" name="" value="Disapprove"></a>
    </div></div>
</div>



